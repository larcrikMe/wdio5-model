{
  "plugins": ["webdriverio", "mocha"],
  "env": {
    "webdriverio/wdio": true,
    "mocha": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    // enable additional rules
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "no-console": ["warn"],
    "no-unused-vars":"warn",
    "mocha/no-exclusive-tests": "error",
    "mocha/no-identical-title": "error",
    "mocha/no-global-tests": "error",
    "mocha/no-skipped-tests": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "expect": true,
    "assert": true
  }
}